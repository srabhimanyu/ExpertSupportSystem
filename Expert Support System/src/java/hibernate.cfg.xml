<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/expert_support_system?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <mapping resource="com/ess/SolveTicket.hbm.xml"/>
    <mapping resource="com/ess/LoginDetails.hbm.xml"/>
    <mapping resource="com/ess/AnswerDetails.hbm.xml"/>
    <mapping resource="com/ess/Announcement.hbm.xml"/>
    <mapping resource="com/ess/AssestsDetails.hbm.xml"/>
    <mapping resource="com/ess/FeeDetails.hbm.xml"/>
    <mapping resource="com/ess/ClientDetails.hbm.xml"/>
    <mapping resource="com/ess/SessionDetails.hbm.xml"/>
    <mapping resource="com/ess/CancelTicket.hbm.xml"/>
    <mapping resource="com/ess/RepresentativeDetails.hbm.xml"/>
    <mapping resource="com/ess/AutoResponder.hbm.xml"/>
    <mapping resource="com/ess/TicketDetails.hbm.xml"/>
    <mapping resource="com/ess/GroupDetails.hbm.xml"/>
    <mapping resource="com/ess/AdminDetails.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
